<script>
      $(document).ready(function() {
        const table = $('#sales_table');
$('#filter-btn').click(function() {
    
    

    const fromDate =new Date( $('#from-date').val());
    // console.log(fromDate)
    const toDate = new Date($('#to-date').val());
    
  
    // Hide all rows initially
    table.find('tbody tr').hide();
  
    // Filter rows based on the date range
    table.find('tbody tr').each(function() {
      const dateString = $(this).find('td:nth-child(6)').text(); // Assuming "Date" is the 4th column
    //   console.log(dateString)
      const date = moment(dateString, 'D/M/YYYY').toDate();
      
    //   console.log(date.toLocaleDateString());
    //   console.log(fromDate)
    //   console.log(toDate)
      if (date.toLocaleDateString() >= fromDate.toLocaleDateString() && date.toLocaleDateString() <= toDate.toLocaleDateString()) {
        $(this).show();
      }
    });
  });
  
  $('#reset-btn').click(function() {
    // Reset the date inputs and show all rows
    $('#from-date').val('');
    $('#to-date').val('');
    table.find('tbody tr').show();
  });

})
</script>

