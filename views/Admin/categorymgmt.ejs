<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.min.css">

<!-- SweetAlert JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.all.min.js"></script>

<script>
       
        
      
    $(document).ready(function() {
        $('.block-button').click(function() {
    var button = $(this);
    var userId = button.data('userid');
    var blockStatus = button.data('blockstatus');
    var url = '';

    if (blockStatus == 1) {
      url = '/admin/unlist?id='+userId;
    
      
    } else {
      url = '/admin/list?id='+userId;
     
    }

    // Show SweetAlert confirmation dialog
    Swal.fire({
      title: 'Are you sure?',
      text: 'This action cannot be undone.',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes'
    }).then((result) => {
      if (result.isConfirmed) {
        // Send Ajax request
        $.ajax({
          url: url,
          type: 'POST',
          success: function(response) {
            // Update the button text and data attributes
            if (blockStatus == 1) {
              button.removeClass('btn-danger').addClass('btn-info').text('List');
              button.data('blockstatus', 0);
            } else {
              button.removeClass('btn-info').addClass('btn-danger').text('Unlist');
              button.data('blockstatus', 1);
            }
            // Show success message
            Swal.fire({
              title: 'Success',
              text: 'Category has been ' + (blockStatus == 1 ? 'unlisted' : 'listed') + '.',
              icon: 'success',
              timer: 2000,
              showConfirmButton: false
            });
          },
          error: function(error) {
            console.log('Error: ' + error);
          }
        });
      }
    });
  });
 
});



